<p style="color: green"><%= notice %></p>

<h1>Family members</h1>

<div id="family_members">
  <% @family_members.each do |family_member| %>
    <div style="border:2px solid blue; width:400px; border-radius:10px; padding-left:20px; margin-top:20px">
      <p>
        <%= family_member.name%>
      </p>
      <p>
        <%= family_member.mobile%>
      </p>
      <p>
        <%= family_member.blood_group%>
      </p>
      <p>
        <%= link_to "Show this member", family_member %>
      </p>
    </div>
   
  <% end %>
</div>

<%= link_to "New family member", new_family_member_path %>
