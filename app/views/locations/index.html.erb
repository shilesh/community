<%= stylesheet_link_tag 'location_index', media: 'all' %>
<p style="color: green"><%= notice %></p>

<h2>Locations</h2>

<div id="locations">
  <% @locations.each do |location| %>
    <div style="border:2px solid; width:500px; padding-left:30px">
    <%= render location %>
    </div>
    <p>
      <%= link_to "Show this location", location %>
    </p>
  <% end %>
</div>

<%= link_to "New location", new_location_path %>
