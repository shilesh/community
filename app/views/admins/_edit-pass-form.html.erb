<h1>Change Account Password</h1>

<%= form_with url: change_password_admin_path(@admin), method: :patch, local: true do |form| %>
  
    <div>
      <%= form.label :old_password, "Old Password", style: "display: block" %>
      <%= form.password_field :old_password %>
    </div>
  
    <div>
      <%= form.label :new_password, "New Password", style: "display: block" %>
      <%= form.password_field :new_password %>
    </div>  

    <div>
      <%= form.submit "Change Password" %>
    </div>
    
<% end %>
  